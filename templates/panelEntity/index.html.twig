{% extends 'template.html.twig' %}
{% block headTile %}
    <h1>

    </h1>
    <ol class="breadcrumb">
        <li><a href="{{path('add-contact')}}"><i class="fa fa-dashboard"></i> Ajouter Contact</a></li>

    </ol>
{% endblock %}
{% block body %}


    <div class="box-body">
        <div class="row">
            <form  action="{{ path('import-contact') }}" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFile">Importer des contacts</label>
                    <input type="file" name="FileUpload" id="FileUpload">
                    <p class="help-block">Nom de l'import</p>

                    <input type="text" value="" name="source" class="col-md-4 form-control">

                </div>
                <button type="submit" class="btn  btn-success float-left">
                    <i class="fa fa-fw fa-clone"></i>Sauvegarder
                </button>
            </form>
        </div>

        <table id="users" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer cell-border">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Socité</th>
                    <th>Taille</th>
                    <th>CorpeOne</th>
                    <th>Verbatim</th>
                    <th>Marque</th>
                    <th>Solution</th>
                    <th>Application</th>
                    <th>Distribution</th>
                    <th>Departement</th>
                    <th>Source</th>
                    <th>Recommandation</th>
                    <th>Opt-Out temporaire</th>
                    <th>Opt-Out définitif</th>
                    <th>Date d'inscription</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in panelEntity %}
                    <tr>
                        <td>{{contact.firstname}}</td>
                        <td>{{contact.lastname}}</td>
                        <td>{{contact.email}}</td>
                        <td>{{contact.societe}}</td>
                        <td>{{contact.taille}}</td>
                        <td>{{contact.CorpeOne}}</td>
                        <td>{{contact.verbatim}}</td>
                        <td>{{contact.marque}}</td>
                        <td>{{contact.solution}}</td>
                        <td>{{contact.application}}</td>
                        <td>{{contact.distribution}}</td>
                        <td>{{contact.departement}}</td>
                        <td>{{contact.source}}</td>
                        <td>{{contact.recommandation}}</td>
                        <td></td>
                        <td></td>
                        <td></td>

                        <td>
                            <button type="button" class="btn  btn-success float-left">
                                <i class="fa fa-fw fa-edit"></i>
                            </button>
                            <button type="button" class="btn  btn-danger float-left">
                                <i class="fa fa-fw fa-times"></i>
                            </button>

                        </td>
                    </tr>
                {%endfor%}
            </tbody>

        </table>
    </div>
{% endblock %}