    <ol class="breadcrumb">
        <li><a href="{{path('add-groupe')}}"><i class="fa fa-dashboard"></i> Ajouter Groupe</a></li>

    </ol>
{% endblock %}
{% block body %}

    <div class="box-body">
        <table id="groupes" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer cell-border">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Animateur</th>
                    <th>Date de cr√©ation</th>
                    
                    <th>Staut</th>
                    
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for groupe in groupes %}
                   <tr>
                        <td>{{groupe.name}}</td>
                        <td>{{groupe.animateur.firstname}}</td>
                        <td></td>
                        <td>{{groupe.statut}}</td>
                        

                        <td>
                            <button type="button" class="btn  btn-success float-left">
                                <i class="fa fa-fw fa-edit"></i>
                            </button>
                            <button type="button" class="btn  btn-danger float-left">
                                <i class="fa fa-fw fa-times"></i>
                            </button>
                           
                        </td>
                    </tr>
                {%endfor%}
            </tbody>

        </table>
    </div>
{% endblock %}