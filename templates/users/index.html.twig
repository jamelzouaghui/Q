{% extends 'template.html.twig' %}

{% block body %}
    <div class="box-body">
        <table id="users" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer cell-border">
            <thead>
                <tr>
                    <th>Nom utilisateur</th>
                    <th>Photo</th>
                    <th>Email</th>
                    <th>Groupe</th>
                    <th>Activ√©</th>
                    <th>Date de Creation</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{user.username}}</td>
                        <td>cdd</td>
                        <td>{{user.email}}</td>
                        <th>{{user.email}}</th>
                        <td> {% if user.status == 1 %}<span class="label label-success">oui</span>{%else%} <span class="label label-danger">non</span>{% endif%}</td>
                        <td>{{user.createdAt |date('d/m/Y')}}</td>
                        <td>Action</td>
                    </tr>
                {%endfor%}
            </tbody>

        </table>
    </div>
{% endblock %}